<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("top-icon.png", class:"furima-icon"), "/" %>
    <%= search_form_for @i, url: name_search_items_path ,class: "search-form" do |f| %>
      <%= f.text_area :name_cont , class: 'input-box' ,placeholder:'商品名から探す'%>
      <button class="search-button">
        <%= image_tag "icon-search.png", class:"search-icon" %>
      </button>
    <%end%>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, cards_path, class: "user-nickname" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', select_registrations_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>